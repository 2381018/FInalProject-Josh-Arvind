<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".RentalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Pilihan Motor 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cbr_2016_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"> <!-- Efek klik -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/cbr_2016_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cbr"
                    android:contentDescription="Gambar Honda CBR 2016" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp">

                    <TextView
                        android:id="@+id/cbr_2016_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CBR 2016"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/cbr_2016_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga: 7 Rb / jam"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                    <!-- TextView Durasi bisa dihapus atau disesuaikan jika tidak relevan lagi -->
                    <TextView
                        android:id="@+id/cbr_2016_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Durasi: -"
                        android:visibility="gone"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Pilihan Motor 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/vario_2020_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"> <!-- Efek klik -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/vario_2020_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/vario125"
                    android:contentDescription="Gambar Honda Vario 2020" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp">

                    <TextView
                        android:id="@+id/vario_2020_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vario 2020"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/vario_2020_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga: 5 Rb / jam"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                    <!-- TextView Durasi bisa dihapus atau disesuaikan jika tidak relevan lagi -->
                    <TextView
                        android:id="@+id/vario_2020_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Durasi: -"
                        android:visibility="gone"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Pilihan Motor 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/supra_x_2020_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"> <!-- Efek klik -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/supra_x_2020_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/supra"
                    android:contentDescription="Gambar Honda Supra X 2020" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp">

                    <TextView
                        android:id="@+id/supra_x_2020_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Supra X 2020"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/supra_x_2020_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga: 4 Rb / jam"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                    <!-- TextView Durasi bisa dihapus atau disesuaikan jika tidak relevan lagi -->
                    <TextView
                        android:id="@+id/supra_x_2020_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Durasi: -"
                        android:visibility="gone"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Spacer untuk mendorong tombol ke bawah jika konten sedikit -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Tombol Pesan Sekarang -->
        <Button
            android:id="@+id/orderbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="12dp"
            android:text="Pesan Sekarang"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
    </LinearLayout>
</ScrollView>